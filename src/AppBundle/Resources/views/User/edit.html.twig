{% block title %}ユーザー管理{% endblock %}

{# コンテンツヘッダー タイトルとパンくず #}
{% block content_title %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            ユーザー管理
            <small>User Management</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('app_admin_index') }}"><i class="fa fa-dashboard"></i> ダッシュボード</a></li>
            <li class="active">ユーザー管理</li>
        </ol>
    </section>
{% endblock %}

{# メインコンテンツ #}
{% block content %}
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">ユーザー情報（編集）</h3>
                    </div>
                    <form id="form" name="form" action="{{ path('app_user_update',{'id':id}) }}"
                          method="POST" {{ form_enctype(form) }}>
                        {{ forms.method("put") }}
                        <div class="col-xs-12 table-responsive">

                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th class="col-xs-3 col-ms-3 col-md-2 col-lg-2" >項目</th>
                                    <th class="col-xs-9 col-ms-9 col-md-10 col-lg-10" >内容</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <th>{{ form_label(form.username) }}</th>
                                    <td>{{ form_widget(form.username) }}{{ form_errors(form.username) }}</td>
                                </tr>
                                <tr>
                                    <th>{{ form_label(form.email) }}</th>
                                    <td>{{ form_widget(form.email) }}{{ form_errors(form.email) }}</td>
                                </tr>
                                <tr>
                                    <th>{{ form_label(form.enabled) }}</th>
                                    <td>{{ form_widget(form.enabled) }}{{ form_errors(form.enabled) }}</td>
                                </tr>
                                <tr>
                                    <th>{{ form_label(form.roles) }}</th>
                                    <td>{{ form_widget(form.roles) }}{{ form_errors(form.roles) }}</td>
                                </tr>
                                <tr>
                                    <th>{{ form_label(form.prefId) }}</th>
                                    <td>{{ form_widget(form.prefId) }}{{ form_errors(form.prefId) }}</td>
                                </tr>
                                </tbody>
                            </table>
                            {{ form_widget(form._token) }}
                        </div>
                        <div class="box-footer">
                            <div class="row">
                                <div class="col-xs-6 text-left">
                                    <a href="{{ path('app_user_index') }}"><input type="button" class="btn btn-primary" value="ユーザー一覧に戻る"></a>
                                </div>
                                <div class="col-xs-6 text-right">
                                    <input type="submit" class="btn btn-danger" value="保存">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

