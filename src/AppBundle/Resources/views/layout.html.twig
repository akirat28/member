<html>
<head>
    <title>{% block title %}{% endblock %} | {{ title }} </title>
    <meta charset="UTF-8" />
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap -->
    <link href="{{ asset('bootstrap-3.3.7/css/bootstrap.min.css') }}" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <script src="https://code.jquery.com/jquery-1.12.4.min.js"
            integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ="
            crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">

<style type="text/css">
.wrapper{
    position: relative;
    overflow-x: hidden;
    overflow-y: auto;
}
.main-header{
    position: relative;
    max-height: 100px;
    z-index: 1030;
    background:#ccc;
}
.main-header .navbar{
    background-color: #3c8dbc;    
    margin-bottom: 0;
    margin-left: 230px;
    border: none;
    min-height: 50px;
    border-radius: 0;
}
.main-header .logo{
    height: 50px;
    display: block;
    width: 230px;
    float: left;    
}
.main-header .logo:hover,
.main-header .sidebar-toggle:hover{
    background:#72afd2;
}
.main-header .sidebar-toggle{
    color:#fff;
    float: left;
    background-color: transparent;
    background-image: none;
    padding: 15px 15px;
    font-family: fontAwesome;    
}
.main-header .sidebar-toggle:before {
    content: "\f0c9";
}
.main-header .sidebar-toggle {
    text-decoration: none;
}
.main-sidebar{
    position: absolute;
    top: 0;
    left: 0;
    padding-top: 50px;
    min-height: 100%;
    width: 230px;
    z-index: 810;    
    background:#222d32;
    color:#fff;
}
.content-wrapper{
    margin-left: 230px;    
    min-height:100%;
}
.main-footer{
    background: #fff;
    padding: 15px;
    color: #444;
    border-top: 1px solid #d2d6de;    
    margin-left: 230px;
}
</style>

<script type="text/javascript">
$(document).ready(function(){
    $('.sidebar-toggle').on('click',function(){
        if($('body.sidebar-collapse').length > 0){
            $('.main-sidebar').animate({
                'width':'230px'
            });
            $('.logo').animate({
                'width':'230px'            
            });
            $('.main-header .navbar, .content-wrapper, .main-footer').animate({
                'margin-left':'230px'
            });
            $('body').removeClass('sidebar-collapse');
        } else {
            $('.main-sidebar').animate({
                'width':'50px'
            });
            $('.logo').animate({
                'width':'50px'            
            });
            $('.main-header .navbar, .content-wrapper, .main-footer').animate({
                'margin-left':'50px'
            });            
            $('body').addClass('sidebar-collapse');
        }
    });
});
</script>

</head>
<body>

<div class="wrapper">

<div id="header" class="main-header">
    <a href="/" class="logo">{% block title2 %}{% endblock %}</a>
    <nav class="navbar">
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
    </nav>
    <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
        </ul>
    </div>
</div>

<aside class="main-sidebar">
    <section class="sidebar">
        <ul class="sidebar-menu">
            <li><a href="">メニュー１</a></li>
            <li><a href="">メニュー２</a></li>
            <li><a href="">メニュー３</a></li>
        </ul>
    </section>
</aside>

<div class="content-wrapper">

{% block content %}
{% endblock %}

</div>

<div id="footer" class="main-footer">
    <p id="copyright">Copyright ©XXXXXXXX All Rights Reserved</p>
</div>

</div><!-- end #wrapper -->

</body>
</html>