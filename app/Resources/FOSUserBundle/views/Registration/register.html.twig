<body class="hold-transition login-page">
<div class="login-box">
    <div class="login-logo">
        <a href="{{ path("app_default_index") }}"><b>Member</b>Admin</a>
    </div>
    <!-- /.login-logo -->

    <div class="register-box-body">
        <p class="login-box-msg">新規ユーザー登録</p>

        <form action="{{ path('fos_user_registration_register') }}" method="post">
            <div class="form-group has-feedback">
                <input type="text" class="form-control" name="fos_user_registration_form[username]" placeholder="アカウント">
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="email" class="form-control" name="fos_user_registration_form[email]" placeholder="Email">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" name="fos_user_registration_form[plainPassword][first]" placeholder="パスワード">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" name="fos_user_registration_form[plainPassword][second]" placeholder="パスワード確認">
                <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
            </div>
            {{ form_widget(form._token) }}
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label class="">
                            <div class="icheckbox_square-blue" aria-checked="false" aria-disabled="false" style="position: relative;">
                                <input type="checkbox" style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;">
                                <ins class="iCheck-helper" style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"></ins>
                            </div>
                            <a href="#">利用規約</a>に同意します。
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">登録</button>
                </div>
                <!-- /.col -->
            </div>
        </form>

        <div class="social-auth-links text-center">
            <p>- OR -</p>
            <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign up using
                Facebook</a>
            <a href="#" class="btn btn-block btn-social btn-google btn-flat"><i class="fa fa-google-plus"></i> Sign up using
                Google+</a>
        </div>

        <a href="{{ path('fos_user_security_login') }}" class="text-center">メンバーの方はこちら</a>
    </div>
    <!-- /.login-box-body -->
</div>
<!-- /.login-box -->

<script src="{{ asset('bundles/app/plugins/jQuery/jquery-2.2.3.min.js') }}"></script>
<script src="{{ asset('bundles/app/bootstrap/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('bundles/app/plugins/iCheck/icheck.min.js') }}"></script>
<script>
    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        });
    });
</script>
</body>
</html>

